# /etc/alo17-db-watchdog.env
#
# Email alert config (optional)
#
# ALERT_EMAIL_TO=admin@yourdomain.com
# ALERT_EMAIL_FROM=alo17-alerts@yourdomain.com
#
# Send at most 1 email per cooldown window (seconds)
# ALERT_COOLDOWN_SEC=1800
#
# SMTP fallback (if you don't have local mail/sendmail configured)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USER=youruser
# SMTP_PASS=yourpass
# SMTP_TLS=true

