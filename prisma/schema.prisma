// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Production'da PostgreSQL kullanılıyor
  // Development için SQLite kullanmak isterseniz: provider = "sqlite" ve DATABASE_URL="file:./prisma/dev.db"
  provider = "postgresql"  // Production için PostgreSQL
  url      = env("DATABASE_URL")
  // Development için: DATABASE_URL="file:./prisma/dev.db" ve provider="sqlite"
  // Production için: DATABASE_URL="postgresql://user:password@localhost:5432/dbname" ve provider="postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  phone         String?
  location      String?
  image         String?
  role          String    @default("user") // "user", "moderator", "admin"
  isActive      Boolean   @default(true) // Kullanıcı aktif mi?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  accounts      Account[]
  sessions      Session[]
  listings      Listing[]
  coupons       Coupon[]  @relation("UserCoupons")
  favorites     UserFavorite[]
  subscriptions Subscription[]
  notifications Notification[]
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  reports       Report[]  @relation("UserReports")
  moderatedListings Listing[] @relation("ModeratedListings")
  invoices      Invoice[]
  passwordResetTokens PasswordResetToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Listing {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  location    String
  category    String
  subCategory String?
  subSubCategory String?
  phone       String?
  showPhone   Boolean  @default(true)
  images      String   // JSON string olarak saklanacak
  features    String   // JSON string olarak saklanacak
  condition   String?
  brand       String?
  model       String?
  year        String?
  isPremium   Boolean  @default(false)
  premiumFeatures String? // JSON string olarak premium özellikler
  premiumUntil DateTime?
  expiresAt   DateTime
  views       Int      @default(0)
  isActive    Boolean  @default(true)
  approvalStatus String @default("pending") // pending, approved, rejected
  moderatorId String?  // İşlem yapan moderatör/admin ID
  moderatedAt DateTime? // İşlem yapılan tarih
  moderatorNotes String? // Moderator notları
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  moderator   User?     @relation("ModeratedListings", fields: [moderatorId], references: [id], onDelete: SetNull)
  favoritedBy UserFavorite[]
  messages    Message[]
  reports     Report[]
}

model UserFavorite {
  id        String   @id @default(cuid())
  userId    String
  listingId String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
}

model Category {
  id            String        @id @default(cuid())
  name          String        @unique
  slug          String        @unique
  subcategories SubCategory[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model SubCategory {
  id          String   @id @default(cuid())
  name        String
  slug        String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name, categoryId])
}

model Coupon {
  id          String    @id @default(cuid())
  code        String    @unique
  discount    Float     // İndirim yüzdesi (0-100 arası)
  maxUses     Int?      // Maksimum kullanım sayısı
  usedCount   Int       @default(0)
  expiresAt   DateTime?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  usedBy      User[]    @relation("UserCoupons")
}

model Subscription {
  id          String   @id @default(cuid())
  userId      String
  planType    String   // "monthly", "quarterly", "yearly"
  amount      Float
  startDate   DateTime @default(now())
  endDate     DateTime
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  type      String   // "expiry_warning", "payment", "system"
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Message {
  id         String    @id @default(cuid())
  content    String
  senderId   String
  receiverId String
  listingId  String?   // İlan ile ilgili mesaj ise
  isRead     Boolean   @default(false)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  
  sender     User      @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User      @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  listing    Listing?  @relation(fields: [listingId], references: [id], onDelete: SetNull)
}

model Report {
  id          String   @id @default(cuid())
  listingId   String
  reporterId  String
  reason      String   // "spam", "inappropriate", "fake", "duplicate", "other"
  description String?
  status      String   @default("pending") // "pending", "reviewed", "resolved", "dismissed"
  adminNotes  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  listing     Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  reporter    User     @relation("UserReports", fields: [reporterId], references: [id], onDelete: Cascade)
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CareerApplication {
  id          String   @id @default(cuid())
  fullName    String
  email       String
  phone       String
  position    String   // Başvurulan pozisyon
  experience  String?  // Deneyim bilgisi
  education   String?  // Eğitim bilgisi
  coverLetter String   // Ön yazı
  resume      String?  // CV dosyası (base64 veya URL)
  status      String   @default("pending") // pending, reviewed, accepted, rejected
  adminNotes  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invoice {
  id              String   @id @default(cuid())
  invoiceNumber   String   @unique // Fatura numarası (örn: INV-2024-001)
  userId          String
  listingId       String?  // İlan ile ilişkili fatura
  amount          Float    // KDV hariç tutar
  taxRate         Float    @default(20.0) // KDV oranı (%)
  taxAmount       Float    // KDV tutarı
  totalAmount     Float    // Toplam tutar (KDV dahil)
  planType        String?  // "none", "monthly", "quarterly", "yearly"
  planName        String?  // Plan adı
  premiumFeatures String?  // JSON string olarak premium özellikler
  status          String   @default("pending") // "pending", "paid", "cancelled"
  paymentMethod   String?  // Ödeme yöntemi
  paymentDate     DateTime? // Ödeme tarihi
  billingName     String   // Fatura adı
  billingAddress  String?  // Fatura adresi
  billingTaxId    String?  // Vergi numarası / TC Kimlik No
  billingEmail    String   // Fatura e-posta
  billingPhone    String?  // Fatura telefon
  notes           String?  // Notlar
  xmlData         String?  // XML formatında fatura verisi
  excelData       String?  // Excel formatında fatura verisi
  emailSent       Boolean  @default(false) // Email gönderildi mi?
  emailSentAt     DateTime? // Email gönderilme tarihi
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Contract {
  id          String   @id @default(cuid())
  title       String   // Sözleşme başlığı
  type        String   // "user", "seller", "buyer", "premium", "general" vb.
  content     String   // Sözleşme içeriği (HTML veya Markdown)
  version     String   @default("1.0") // Sözleşme versiyonu
  isActive    Boolean  @default(true) // Aktif mi?
  isRequired  Boolean  @default(false) // Kullanıcılar için zorunlu mu?
  language    String   @default("tr") // Dil kodu
  publishedAt DateTime? // Yayınlanma tarihi
  expiresAt   DateTime? // Son geçerlilik tarihi (opsiyonel)
  createdBy   String?  // Oluşturan admin ID
  notes       String?  // Admin notları
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmailSubscription {
  id        String   @id @default(cuid())
  email     String   @unique // Email adresi
  isActive  Boolean  @default(true) // Abonelik aktif mi?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Şifre sıfırlama token'ları (tek kullanımlık + süreli)
model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

// Nöbetçi eczane listesi – günde bir kez (18:30) cron ile güncellenir; sayfa DB'den okur
model NobetciEczaneRecord {
  id          String   @id @default(cuid())
  name        String
  address     String
  phone       String
  mapQuery    String   // Google Haritalar arama / yol tarifi
  ilceSlug    String   // merkez, biga, can, vb.
  validForDate String  // Hangi güne ait liste: YYYY-MM-DD (Türkiye günü)
  createdAt   DateTime @default(now())

  @@index([validForDate])
  @@index([validForDate, ilceSlug])
}
