{
  "name": "desktop-sync-agent",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "electron .",
    "pack:dir": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "tr.alo17.syncagent",
    "productName": "Alo17 Sync Agent",
    "files": [
      "electron/**",
      "renderer/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Alo17 Sync Agent"
    }
  }
}

